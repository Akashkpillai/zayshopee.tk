<%- include('../layout/header') %>
<%- include('../partials/userHeader') %>


	<div class="cart-wrap">
		<div class="container">
	        <div class="row">
			    <div class="col-md-12">
			        <div class="main-heading mb-10">My wishlist</div>
			        <div class="table-wishlist">
				        <table cellpadding="0" cellspacing="0" border="0" width="100%">


				        	<thead>
								
					        	<tr>
					        		<th width="45%">Product Name</th>
					        		<th width="15%">Unit Price</th>
					        		<th width="15%"></th>
					        		<th width="10%"></th>
					        	</tr>
					        </thead>
					        <tbody>
								<% for(i=0;i<result.length;i++){ %> 
					        	<tr>
					        		<td width="45%">
					        			<div class="display-flex align-center">
		                                    <div class="img-product">
												<a href="/view_product?id=<%= result[i].productid %> ">
		                                        <img src="/images/<%= result[i].image1 %> " alt="" class="mCS_img_loaded">
												</a>
		                                    </div>
		                                    <div class="name-product">
		                                        <%= result[i].productName %> 
		                                    </div>
	                                    </div>
	                                </td>
					        		 <td width="15%" class="price">â‚¹ <%= result[i].price %> </td>
									 <form action="/user_shop/addToCart?id=<%= result[i].productid %> " method="post">
					        		<td width="15%"><button class="round-black-btn small-btn" type="submit">Add to Cart</button></td>
								</form>
								
					        		<td width="10%" class="text-center"><a href="/delete_wishlist<%= result[i]._id %> " class="trash-icon">
										<button class="btn btn-dark" onclick="return  confirm('Are you want to delete?')"><i class="far fa-trash-alt"></i></button>
									</a>
								</td>
					        	</tr>
								<% } %> 
					        	 
				        	</tbody>
				        </table>
				    </div>
			    </div>
			</div>
		</div>
	</div>
