<%- include('../layout/header') %>
<%- include('../partials/userHeader') %>


  <section class="vh-100" style="background-color: #bbf3c4;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-12 mb-4 mb-lg-0">
          <div class="card mb-3" style="border-radius: .5rem;">
            <div class="row g-0">
              <div class="col-md-4 gradient-custom text-center text-dark"
                style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                <img src="/images/<%= profile.profileImage %> "
                          alt="Avatar" class="img-fluid my-5" style="width: 80px;border-radius: 38px;height: 80px;" />
              
                <h5><%= profile.name %></h5>
                <a href="/user_home/profile-edit" style="color: rgb(15, 14, 14);"><i class="fa-solid fa-pen-to-square proedi"></i></a>
              </div>
              <div class="col-md-8">
                <div class="card-body p-4">
                  <h6>Profile</h6>
                  <hr class="mt-0 mb-4">
                  <div class="row pt-1">
                    <div class="col-6 mb-3">
                      <h6>Email</h6>
                      <p class="text"><%= profile.email %></p>
                    </div>
                    <div class="col-6 mb-3">
                      <h6>Phone</h6>
                      <p class="text"><%= profile.mobile  %></p>
                    </div>
                  </div>
                 
                  <hr class="mt-0 mb-4">
                  <div class="row pt-1">
                    <div class="col-6 mb-3">
                     <a href="/profile/orders">
                       <button class="btn-2"><span>Orders</span></button>
                      </a>
                    </div>
                    
                  </div>
                  <div class="d-flex justify-content-start">
                    <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                    <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                    <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('../layout/footer') %>