<%-include ('../layout/header.ejs') %> 
<%-include('../partials/adminHeader.ejs')  %> 



<div class="btn-group pt-5 contact">
  <a class="btn btn-primary dropdown-toggle mb-2" data-bs-toggle="dropdown" aria-expanded="false">
      Download
  </a>
  <ul class="dropdown-menu">
      <li><a class="dropdown-item" href="/admin/exportExcel">Excel</a></li>
      <li><button class="dropdown-item" onclick="myfun('pt')">Pdf</button></li>

  </ul>
</div>

 <div class="table-responsive p-5" id="pt"> 
    <table class="table table-hover" id="usertable"> 
      <div class="table table-hover container"  > 
        <thead> 
          <tr> 
                <th scope="col">Product Name</th> 
                <th scope="col">Price</th> 
                <!-- <th scope="col">Offer Price</th>  -->
                <th scope="col">Category</th> 
                <th scope="col">Image</th> 
                <th scope="col">Quantity</th> 
                <!-- <th scope="col">Status</th>  -->
          </tr> 
        </thead> 
        <tbody> 
        <% for(i=0;i<docs[0].items.length;i++) { %>  
          <tr> 
            <td><%= docs[0].items[i].productName  %> </td> 
            <td><%= docs[0].items[i].price %> </td> 
            <!-- <td><%= //orderItems[i].offerPrice %></td>  -->
            <td><%= docs[0].items[i].category  %></td> 
            <td> 
                <img id="main-image" src="/images/<%=docs[0].items[i].image1 %>" style="width: 5rem;height: 5rem;" alt=""> 
            </td> 
            <td><%= docs[0].items[i].quantity  %></td> 
            <!-- <td style="font-weight: 600;"><%=// docs.orderStatus %></td>  -->
          </tr> 
        <% } %>  
        </tbody> 
      </table> 
    </div> 
</div> 

<%- include('../layout/footer') %>

<script>
  console.log("script working")
  function myfun(pt) {
      var bk = document.body.innerHTML;
      var dv = document.getElementById('pt').innerHTML;
      document.body.innerHTML = dv;
      document.body.style.padding = "20px"
      window.print();
      location.reload();
  }
  $(document).ready(function () {
      $('#usertable').DataTable()
  });
</script>





